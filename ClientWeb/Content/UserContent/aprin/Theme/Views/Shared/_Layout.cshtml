@using ClientWeb.Models.BLL
@using ClientWeb.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>شرکت مشاوره تبلیغات | آپرین</title>
    <link href="@TempData["WebsiteThemePath"]assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="@TempData["WebsiteThemePath"]assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="@TempData["WebsiteThemePath"]assets/css/animate.min.css" rel="stylesheet">
    <link href="@TempData["WebsiteThemePath"]assets/css/lightbox.css" rel="stylesheet">
    <link href="@TempData["WebsiteThemePath"]assets/css/main.css" rel="stylesheet">
    <link href="@TempData["WebsiteThemePath"]assets/css/responsive.css" rel="stylesheet">
    <link rel="shortcut icon" href="@TempData["WebsiteThemePath"]assets/images/logo1.png">

    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@TempData["WebsiteThemePath"]assets/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@TempData["WebsiteThemePath"]assets/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@TempData["WebsiteThemePath"]assets/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="@TempData["WebsiteThemePath"]assets/images/ico/apple-touch-icon-57-precomposed.png">
</head>

<body>
    <!--Start header-->
    <header id="header">
        @Html.Action("TopBarContact", "Utility", new { profile = TempData["UserName"], lang = TempData["lang"] })
        <div class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("PageDetail", "Page", new { profile = TempData["UserName"], lang = "FA", id = 0 })">
                        <h1><img style="height: 90px;margin-top: -30px;" src="@TempData["WebsiteThemePath"]assets/images/logo1.png" alt="logo"></h1>
                    </a>
                </div>
                <div>
                    @Html.Action("MainMenu", "Utility", new { profile = TempData["UserName"], lang = TempData["lang"] })
                    <div class="search">

                        @using (Html.BeginForm("SearchItem", "Item", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
                    {
                    @Html.AntiForgeryToken()

                    <form role="form">
                        <i class="fa fa-search"></i>
                        <div class="field-toggle">
                            <input type="text" class="search-form" autocomplete="off" placeholder="">
                        </div>
                    </form>

                    }
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!--Start header-->
    @RenderBody()
    <!--Start footer-->

     @Html.Action("Footer", "Utility", new { profile = TempData["UserName"] })



     
    <!--End footer-->

    @RenderSection("jsForThisPage", false)


    <script type="text/javascript" src="@TempData["WebsiteThemePath"]assets/js/jquery.js"></script>
    <script type="text/javascript" src="@TempData["WebsiteThemePath"]assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="@TempData["WebsiteThemePath"]assets/js/lightbox.min.js"></script>
    <script type="text/javascript" src="@TempData["WebsiteThemePath"]assets/js/wow.min.js"></script>
    <script type="text/javascript" src="@TempData["WebsiteThemePath"]assets/js/main.js"></script>
    
</body>
</html>
