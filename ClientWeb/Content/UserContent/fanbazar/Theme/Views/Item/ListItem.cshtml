@model PagedList.IPagedList<ClientWeb.Models.DataModels.ItemNew>
@using PagedList.Mvc;
<section class="ad-breadcrumb parallex">
    <div class="container page-banner">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <h1>لیست @ViewBag.Category</h1>
            </div>
            <div class="col-sm-6 col-md-6">
            </div>
        </div>
    </div>
</section>
<section class="light-blue ad-listing">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-sm-12 col-xs-12 col-md-push-1">
                <div style="text-align: center;direction: ltr!important;margin-top: -70px;margin-bottom: 10px;">
                    <div class="bottom-pagination" style="text-align:center;direction:ltr!important;float: none;">
                        @*صفحه @(ViewBag.Total < ViewBag.page ? 0 : ViewBag.page) از @ViewBag.Total*@
                        @Html.PagedListPager(Model, page => Url.Action("ListItem", "Item", new
                   {
                       page,
                       Type = ViewBag.Type,
                       profile = ViewBag.profile,
                       ID = ViewBag.F_MenuID,

                   }))
                    </div>
                </div>

                <div class="all-ads-list-box2">
                    @foreach (var item in Model)
                    {
                    <div class="ad-box ad-box-2" style="width:100%;">
                        <div class="col-md-3 col-sm-3 col-xs-12 nopadding">
                            <div class="comp-logo">
                                <a><img style="height: 170px;" src="@(!string.IsNullOrEmpty(item.Image) ? ViewBag.PrePath + item.Image : "/Content/DefaultContent/Imgs/No_Image.png")" class="img-responsive"> </a>
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <div class="ad-box-2-detail">
                                <div class="ad-title-box">
                                    <span class="cat"><i class="flaticon-interface"></i></span>
                                    <div style="padding-right:55px;">
                                        <div style="float: right;width: 95%;" class="ad-title"><a href="@Url.Action("ItemDetail","Item", new {profile=TempData["UserName"], ID = item.ID,lang=TempData["lang"],Type=ViewBag.Type })">@item.Name</a></div>
                                        <div class="ad-title-meta" style="margin-top:10px;float:right;">
                                            <span style="direction:ltr;"><i class="fa fa-calendar"></i>@ClientWeb.Models.BLL.Tools.SpecialJalaliFormat(item.CreatedDateOnUTC ?? default(DateTime))</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                @*<div class="ad-desc">
                                    <p style="max-height: 60px;">@item.Description</p>
                                </div>*@
                                <div class="ad-bottom-area">
                                    <a href="@Url.Action("ItemDetail","Item", new {profile=TempData["UserName"], ID = item.ID,lang=TempData["lang"],Type=ViewBag.Type })" class="btn btn-default pull-right flip">بیشتر ...<i class="fa fa-angle-double-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
                <div style="text-align:center;direction:ltr!important;">
                    <div class="bottom-pagination" style="text-align:center;direction:ltr!important;float: none;">
                        @*صفحه @(ViewBag.Total < ViewBag.page ? 0 : ViewBag.page) از @ViewBag.Total*@
                        @Html.PagedListPager(Model, page => Url.Action("ListItem", "Item", new
                       {
                           page,
                           Type = ViewBag.Type,
                           profile = ViewBag.profile,
                           ID = ViewBag.F_MenuID,

                       }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
