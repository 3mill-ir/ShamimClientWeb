@{
    PostManagement pm = new PostManagement();
    var Newses = pm.RecentPosts(65, 8, TempData["UserName"].ToString());
}
<section style="margin-top: -90px;margin-bottom:-70px;">
    <div class="container">
        <div class="heading-title heading-dotted text-center" style="margin-top: 15px;">
            <h4><span style="margin-right: 15px;color: black;"> رویداد ها</span></h4>
        </div>
        <div style="margin-top:50px;" class="owl-carousel owl-padding-10 buttons-autohide controlls-over" data-plugin-options='{"singleItem": false, "items":"4", "autoPlay": 4000, "navigation": true, "pagination": false}'>
            @foreach (var item in Newses)
            {
                <div class="img-hover" style="background-color: #ededed;height: 350px;padding:5px;">
                    <a href="@Url.Action("PostDetail", "Post", new { profile = TempData["UserName"], lang = item.Language, id = item.ID })">
                        <img class="img-responsive" src="@(!string.IsNullOrEmpty(item.ImagePath) ? Tools.ReturnPathPhysicalMode("DynamicPageImages", TempData["UserName"].ToString(), "AdminAddress", "") + item.ImagePath : @TempData["WebsiteThemePath"]+"DefaultContent/Imgs/Park.png")" alt="">
                    </a>
                    <h5 class="text-left margin-top-20" style="text-align:right;line-height:25px;padding:10px;"><a style="direction:rtl;text-align:right" href="@Url.Action("PostDetail", "Post", new { profile = TempData["UserName"], lang = item.Language, id = item.ID })"><span style="float:right;    text-align: center;margin-top: -20px;">@item.Tittle</span></a></h5>
                    <ul class="text-left size-12 list-inline list-separator" style="padding:10px;">
                        <li style="float:right;line-height:25px;">
                            <i class="fa fa-calendar"></i>
                            @Tools.SpecialJalaliFormat(item.CreatedOnUTC ?? default(DateTime))
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</section>
