@model IEnumerable<ClientWeb.Models.DataModels.PostDataModel>
@using ClientWeb.Models.DataModels;
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryajax")
<!-- Tab panes -->
<div class="row-fluid" style="background: #fff;">
    <div class="container-fluid">
        <div class="col-md-10 col-md-offset-3 col-centered">
            <div class="tab" role="tabpanel">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist" style="margin-bottom:30px;">
                    @foreach (var item in ViewBag.Categories as List<MenuDataModel>)
                    {
                        <li role="presentation">@Ajax.ActionLink(item.Name, "NewsSliderGet", new { F_MenuID = item.ID }, new AjaxOptions { LoadingElementId = "PipoBox2_Loading", UpdateTargetId = "AjaxBoxLatestNews",InsertionMode = InsertionMode.Replace,HttpMethod = "GET"}, new {  aria_controls = "home", role = "tab", data_toggle = "tab" })</li>
                    }
                </ul>
                <div class="col-lg-12 col-md-12" id="PipoBox2_Loading" style="text-align:center;padding:20px 0;display:none">
                    <img src="@TempData["WebsiteThemePath"]DefaultContent/Imgs/ajax-load.gif" />
                </div>
                <!-- Tab panes -->
                <div class="tab-content tabs" style="height:542px;padding-top:35px;" id="AjaxBoxLatestNews">

                </div>
            </div>
        </div>
    </div>
</div>
