@model IEnumerable<ClientWeb.Models.DataModels.LinkModel>
@{
    string lang = TempData["lang"].ToString();
}
<div class="list-group">
    <span href="#" class="list-group-item active">
        @(lang == "FA" ? "لینک ها" : lang == "EN" ? "Links" : lang == "TR" ? "Bağlantılar" : "الروابط")
        <span class="pull-right" id="slide-submenu">
        </span>
    </span>
    @foreach (var item in Model)
    {
        <a href="@item.Link" class="list-group-item" target="_blank">
            @if (item.Image != "Rahbari.jpg")
                {
                <img style="width: 100%;height: 70px;border-radius:5px;" src="@ViewBag.PrePath@item.Image" />
            }
            else
            {
                <img style="width: 100%;height: 70px;border-radius:5px;" src="@TempData["WebsiteThemePath"]DefaultContent/Links/Rahbari.jpg" />
            }
        </a>
    }
</div>